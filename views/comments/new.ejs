<% include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center">Add New Comment For <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
            </div>
            <div class="form-group">
                <textarea rows="6" cols="50" class="form-control" name="comment[text]" placeholder="comment"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>

    <% include ../partials/footer %>
</div>
